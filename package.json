{
  "name": "apimon",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "db:generate": "turbo run db:generate --filter=@apimon/db",
    "db:migrate": "turbo run db:migrate --filter=@apimon/db",
    "typecheck": "turbo run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@vitest/coverage-v8": "^4.0.18",
    "turbo": "^2.5.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "bun@1.2.15"
}
